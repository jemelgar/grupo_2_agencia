<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/styles_index.css" />

		<!-- <link rel="shortcut icon" type="image/png" href="img/favicon.png" /> -->
		<link rel="icon" href="/img/Logo.ico" type="image/ico" />

		<!-- <link rel="icon" href="imagenes/favicon.png" type="image/png" /> -->
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;500;700;900&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet" />
		<title>Focus Travel</title>
	</head>
	<body>
		<div class="container">
			<%- include('partials/header') %>

			<main class="main">
				<div class="container-destination">
					<% for (let elemento of resultados) { %>

					<section class="destination destination__<%=elemento.destination_promoted%>">
						<article class="destination__promoted">
							<div class="destination__info-container">
								<img src="<%= elemento.img_destination%> " alt="" class="destination-picture" />
								<a href="/tour/<%=elemento.id%>">
									<ul class="destination-description">
										<li class="destination-name"><%= elemento.name %></li>
										<li class="destination-price">Desde: $<%= elemento.price%> p/persona</li>
										<li class="destination-date">Reserva antes del <%= elemento.date %></li>
									</ul></a
								>
							</div>
							<a href="/tour/<%=elemento.id%>" class="btn btn-reservar" id="btn--<%= elemento.tipo %>">ver mÃ¡s...</a>
						</article>
					</section>
					<%} %>
				</div>
			</main>
			<%- include('partials/footer') %> <%- include('partials/mobilebar') %>
		</div>
	</body>
</html>
