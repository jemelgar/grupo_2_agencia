<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles_index.css" />
    <link rel="stylesheet" href="/css/styles_newproduct.css" />

    <!-- <link rel="shortcut icon" type="image/png" href="img/favicon.png" /> -->
    <link rel="icon" href="/img/Logo.ico" type="image/ico" />

    <!-- <link rel="icon" href="imagenes/favicon.png" type="image/png" /> -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Focus Travel</title>
  </head>
  <body>
    <div class="container">
      <%- include('../partials/header') %>

      <main class="main">
        <div class="container-destination">
          <!-- Inicio del cuerpo de la vista -->
          <!-- Inicio del formulario -->
          <form
            action="/admin"
            method="POST"
            enctype="multipart/form-data"
            id="new-product"
          >
            <!-- Seleccionar tipo de destino -->
            <section>
              <label for="tipoDestino">Selecciona el tipo de destino</label>
              <select name="tipo" id="tipoDestino">
                <option value="normal">Normal</option>
                <option value="destacado">Destacado</option>
              </select>
              <br />
            </section>

            <!-- Agregar nombre -->
            <section>
              <label for="nombre">Nombre</label>
              <input
                type="text"
                name="nombre"
                placeholder="Nombre del destino"
                required
                pattern="[a-zA-Z ]{2,254}"
                autocomplete="off"
                id="nombre"
              />
              <br />
            </section>
            <!-- Agregar Precio -->
            <section>
              <label for="precio">Precio</label>
              <input
                type="text"
                name="precio"
                placeholder="Precio"
                required
                autocomplete="off"
                id="precio"
              />
              <br />
            </section>
            <!-- Agregar Fecha -->
            <section>
              <label for="fecha">Fecha</label>
              <input
                type="text"
                name="fecha"
                placeholder="Fecha de reservación"
                required
                id="fecha"
              />
              <br />
            </section>
            <!-- Agregar Imagen -->
            <!-- <label for="imgDestino">Subir Imagen del Destino</label>
          <input type="file" name="img" id="imgDestino" required>
          <br> -->
            <!-- Agregar Tag -->
            <section>
              <label for="tag">Identificador</label>
              <input
                type="text"
                name="tag"
                placeholder="Agregar Identificador"
                required
                pattern="[a-zA-Z ]{2,5}"
                id="tag"
              />
              <br />
            </section>
            <!-- Agregar rating -->
            <section>
              <label for="ratingDestino">Calificación del Destino</label>
              <select name="rating" id="ratingDestino">
                <option value="⭐⭐⭐⭐⭐">⭐⭐⭐⭐⭐</option>
                <option value="⭐⭐⭐⭐">⭐⭐⭐⭐</option>
                <option value="⭐⭐⭐">⭐⭐⭐</option>
                <option value="⭐⭐">⭐⭐</option>
                <option value="⭐">⭐</option>
              </select>
              <br />
            </section>
            <!-- Agregar Descripcion -->
            <section>
              <label for="descripcion">Descripción</label>
              <textarea
                name="descripcion"
                id="descripcion"
                cols="30"
                rows="10"
                placeholder="Descripción del Destino"
                required
              ></textarea>
              <br />
            </section>
            <br />
            <section>
              <label for="imagen"> Imagen del producto </label>
              <input type="file" id="imagen" name="imagen" />

              <br />
            </section>
            <!-- BTN Guardar en JSON -->
            <section class="botones">
              <button type="submit" class="btn" id="btn--normal">Enviar</button>
              <!-- BTN Limpiar Campos -->
              <button type="reset" class="btn">Cancelar</button>
              <!-- FIN del Formulario -->
            </section>
          </form>

          <!-- Fin cuerpo vista -->
        </div>
      </main>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
