<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles_index.css" />
    <link rel="stylesheet" href="/css/styles_newproduct.css" />

    <!-- <link rel="shortcut icon" type="image/png" href="img/favicon.png" /> -->
    <link rel="icon" href="/img/Logo.ico" type="image/ico" />

    <!-- <link rel="icon" href="imagenes/favicon.png" type="image/png" /> -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Focus Travel</title>
  </head>
  <body>
    <div class="container">
      <%- include('./partials/header') %>
      <ul class="errores"></ul>
      <main class="main">
        <div class="container-destination">
          <!-- Inicio del cuerpo de la vista -->

          <!-- Inicio del formulario -->
          <form
            action="/admin"
            method="POST"
            enctype="multipart/form-data"
            id="new-product"
          >
            <!-- Seleccionar tipo de destino -->
            <section>
              <label for="tipoDestino">Carrito de Compras </label>
              </select>
              <br />
            </section>

            <!-- Agregar nombre -->
            <section>
              <label for="nombre">Item</label>
              <input
                type="text"
                name="nombre"
                placeholder="Nombre del destino"
                autocomplete="off"
                id="nombre"
              />
              <% if (locals.errors && errors.nombre) { %>
              <div class="text-danger"><%= errors.nombre.msg %></div>
              <% } %>
              <br />
            </section>
            <!-- Agregar Precio -->
            <section>
              <label for="precio">Precio</label>
              <input
                type="number"
                name="precio"
                placeholder="Precio"
                autocomplete="off"
                id="precio"
              />

              <br /><% if (locals.errors && errors.precio) { %>
              <div class="text-danger"><%= errors.precio.msg %></div>
              <% } %>
            </section>
			<section>
				<label for="precio"> Cantidad de Personas</label>
				<input
				  type="number"
				  name="cantidad"
				  placeholder="Cantidad de Personas"
				  autocomplete="off"
				  id="cantidad"
				/>
  
				<br /><% if (locals.errors && errors.precio) { %>
				<div class="text-danger"><%= errors.precio.msg %></div>
				<% } %>
			  </section>
            <!-- Agregar Fecha -->
            <section>
              <label for="fecha">Fecha</label>
              <input
                type="text"
                name="fecha"
                placeholder="YYYY-MM-DD"
                id="fecha"
              />
              <% if (locals.errors && errors.fecha) { %>
              <div class="text-danger"><%= errors.fecha.msg %></div>
              <% } %>
              <br />
            </section>
         
            <section class="botones">
              <button type="submit" class="btn" id="btn--normal"> Pagar </button>

          </form>

          <!-- Fin cuerpo vista -->
        </div>
      </main>
    </div>
    <%- include('./partials/footer') %>
    <script src="/js/newProductValidation.js"></script>
  </body>
</html>
